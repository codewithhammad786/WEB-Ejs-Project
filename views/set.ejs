<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LEGO Set Details</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">
</head>
<body>
    <div class="container mx-auto mt-10">
        <div id="set-details" class="p-6 bg-white rounded-lg shadow-md">
            <h2 class="text-2xl font-bold mb-4">Set Details</h2>
            <p><strong>Set Name:</strong> <span id="set-name"></span></p>
            <p><strong>Year Released:</strong> <span id="set-year"></span></p>
            <p><strong>Theme:</strong> <span id="set-theme"></span></p>
            <p><strong>Number of Parts:</strong> <span id="set-parts"></span></p>
        </div>
    </div>

    <script>
        window.onload = function() {
            fetch('/lego/sets/001-1')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('set-name').innerText = data.name;
                    document.getElementById('set-year').innerText = data.year;
                    document.getElementById('set-theme').innerText = data.theme;
                    document.getElementById('set-parts').innerText = data.num_parts;
                });
        }
    </script>
</body>
</html>
